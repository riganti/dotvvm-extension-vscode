{
    "name": "dotvvm-for-visual-studio-code",
    "displayName": "DotVVM for Visual Studio Code",
    "description": "DotVVM support for VS Code",
    "version": "0.1.0",
    "icon": "images/dotvvm-logo.png",
    "publisher": "riganti",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:dotvvm"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "dotvvm",
                "extensions": [
                    ".dothtml",
                    ".dotmaster",
                    ".dotcontrol"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "dotvvm",
                "scopeName": "text.html.dotvvm",
                "path": "./syntaxes/dotvvm.tmLanguage.json",
                "embeddedLanguages": {
                    "text.html": "html"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./tsconfig.json",
        "watch": "tsc -watch -p",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "fs": "0.0.1-security",
        "path": "^0.12.7",
        "vscode-css-languageservice": "^2.1.10",
        "vscode-html-languageservice": "^2.0.10",
        "vscode-languageclient": "^3.5.0",
        "vscode-languageserver": "^3.5.0",
        "vscode-languageserver-types": "^3.5.0",
        "vscode-nls": "^2.0.2",
        "vscode-uri": "^1.0.1",
        "watch": "^1.0.2"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.43",
        "@types/node": "^8.0.51",
        "eslint": "^4.11.0",
        "mocha": "^4.0.1",
        "typescript": "^2.6.1",
        "vsce": "^1.31.1",
        "vscode": "^1.1.5"
    }
}